<h1>New device</h1>

<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	  <%= f.input :resident_id, as: :select, :collection => Resident.all %>
  	  <%= f.input :status, as: :boolean, :label => "Activate?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<%= link_to 'Back', devices_path %>
