<h1>New device</h1>

<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-actions">
  	  <%= f.input :resident_id, as: :select, :collection => Resident.all %>
  	  <%= f.input :status, as: :boolean, :label => "Activate?" %>
  </div>

  <div class="form-actions">
  	<%= link_to 'Back', devices_path, class: "btn" %>
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>


