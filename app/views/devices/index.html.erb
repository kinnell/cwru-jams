<h1>Devices</h1>
<br>

  <table class="table table-bordered table-striped table-condensed" style="width:50%;left:20px;">
      <thead>
        <tr>
            <th>Device ID</th><th>Status</th><th>Toolbox</th>
        </tr>
      </thead>   
      <tbody>
        <% @devices.each do |device| %>
            <tr>
              <td><%= device.id %></td> 
              <td class="center"><span class="label label-success">Active</span></td>
              <td><%= link_to 'Show', device %>
                  <%= link_to 'Edit', edit_device_path(device) %>
                  <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
        <% end %>
                                   
      </tbody>
  </table>

<br />

<%= link_to 'New Device', new_device_path %>

             

