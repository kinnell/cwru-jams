<h1>Residents</h1>
<br>


  <table class="table table-bordered table-striped table-condensed" style="width:50%;left:20px;">
      <thead>
        <tr>
            <th>Resident Name</th>
            <th><center>Room</center></th>  
            <th><center>Resident Status</center></th>                
            <th><center>Options</center></th>
        </tr>
      </thead>   
      <tbody>
        <% @residents.each do |resident| %>
            <tr>
              <td><%= link_to resident.name, resident %></td>
              <td><center><%= resident.room %></center></td>
              <td style="text-align: center;">
                  <% if resident.status==true %>
                      <span class="label label-success">Online</span>
                  <% elsif resident.status==false %>
                      <span class="label label-offline">Offline</span
                  <% end %>  

              </td>
              <td style="text-align: center;">
                  <%= link_to(edit_resident_path(resident)) do %><i class="halflings-icon black pencil"></i><% end %>
                  <%= link_to(resident, method: :delete) do %><i class="halflings-icon black trash"></i><% end %>
              </td>
            </tr>
        <% end %>
                                   
      </tbody>
  </table>

<br />

<%= link_to (new_resident_path), class: "btn btn-success" do %>
New Resident
<% end %>




             

